{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "sudo debug cedana-cli run",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "console": "integratedTerminal",
            "args": ["run", "test/integration/jobs/job.yml"],

        },
       {
            "name": "debug cedana-cli bootstrap",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["bootstrap"],

        },
 {
            "name": "debug cedana-cli server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "env": {
                "CEDANA_ORCH_ID": "orch123",
                "CEDANA_JOB_ID": "testjob",
                "CEDANA_CLIENT_ID": "client123",
                "CEDANA_LOG_LEVEL": "0",
                "GO111MODULE": "on"
            },
            "args": ["server"],

        },

        {
            "name": "debug cedana-cli show",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["show"],
            "env": {
                "CEDANA_LOG_LEVEL": "0"
            }
        },
  {
            "name": "debug cedana-cli restore",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["restore", "${input:promptForJobID}"],
            "env": {
                "CEDANA_LOG_LEVEL": "0"
            }
        },
 {
            "name": "debug cedana-cli destroy-all",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["destroy-all"],
            "env": {
                "CEDANA_LOG_LEVEL": "0",
                "GO111MODULE": "on"
            }
        },
{
            "name": "debug cedana-cli job status",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["job", "status"],
            "env": {
                "CEDANA_LOG_LEVEL": "0"
            }
        },

{
            "name": "debug cedana-cli list-checkpoints",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${fileDirname}",
            "console": "integratedTerminal",
            "args": ["whisper", "list-checkpoints", "-j", "${input:promptForJobID}"],
            "env": {
                "CEDANA_LOG_LEVEL": "0",
                "GO111MODULE": "on"
            }
        }

    ],
   "inputs": [
        {
            "id": "promptForJobID",
            "type": "promptString",
            "description": "enter job ID",
            "default": ""
        },
    ]
}
